#include <stdio.h>
#include <stdlib.h>

int pideSuma(int * resultado);

int main(void) {


	int resultado;


	if(pideSuma(&resultado)==0){
		printf("\nel resultado es %d",resultado);
	}
	else{
		printf("ERROR!");
	}
	return 0;
}

int pideSuma(int* resultado){
	int numero1;
	int numero2;
	printf("\nIngrese dos numeros, estos se van a sumar");
	scanf("%d",&numero1);
	scanf("%d",&numero2);
	*resultado=numero1+numero2;

	return 0;
}


